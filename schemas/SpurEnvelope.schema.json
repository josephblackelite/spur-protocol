{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spurprotocol.dev/schemas/SpurEnvelope.schema.json",
  "title": "SpurEnvelope",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "const": "0.1.0"
    },
    "id": {
      "type": "string"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time"
    },
    "intent": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "verb": {
          "type": "string"
        },
        "target": {
          "type": "string"
        }
      },
      "required": ["verb", "target"]
    },
    "constraints": {
      "type": "object"
    },
    "requiredCapabilities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "version",
    "id",
    "issuedAt",
    "intent",
    "constraints",
    "requiredCapabilities"
  ]
}
