{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spurprotocol.dev/schemas/SkillPack.schema.json",
  "title": "SkillPack",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "const": "0.1.0"
    },
    "skillId": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "capabilitiesProvided": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "inputs": {
      "type": "object"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "stepId": {
            "type": "string"
          },
          "action": {
            "type": "string"
          }
        },
        "required": ["stepId", "action"]
      }
    }
  },
  "required": [
    "version",
    "skillId",
    "name",
    "category",
    "capabilitiesProvided",
    "inputs",
    "steps"
  ]
}
